<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="@dimen/b_dp20"
    android:layout_marginRight="@dimen/b_dp20"
    android:layout_marginTop="@dimen/b_dp20"
    android:layout_marginBottom="@dimen/b_dp10"
    android:paddingTop="@dimen/app_bar_height">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2月7日 星期三"
        android:textColor="#8E8E93"
        android:textSize="@dimen/b_sp14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2D动效"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/b_dp30"
        android:textSize="@dimen/b_sp30"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="@dimen/b_dp45"
        android:layout_height="@dimen/b_dp45"
        android:layout_gravity="bottom|right"
        android:src="@mipmap/img_avatar"/>

</FrameLayout>