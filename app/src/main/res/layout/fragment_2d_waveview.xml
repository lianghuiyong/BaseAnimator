<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.better.anime.dynamic2d.WaveView
            android:id="@+id/wave1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:better_color_bottom="#605E35B1"
            app:better_color_top="#F05E35B1"
            app:better_mode="circle" />


        <com.better.anime.dynamic2d.WaveView
            android:id="@+id/wave2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:better_border_color="#FF1744"
            app:better_border_width="@dimen/b_dp2"
            app:better_color_bottom="#605E35B1"
            app:better_color_top="#F05E35B1"
            app:better_mode="circle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.better.anime.dynamic2d.WaveView
            android:id="@+id/wave3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:better_color_bottom="#605E35B1"
            app:better_color_top="#F05E35B1"
            app:better_mode="square" />


        <com.better.anime.dynamic2d.WaveView
            android:id="@+id/wave4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:better_border_color="#FF1744"
            app:better_border_width="@dimen/b_dp2"
            app:better_color_bottom="#605E35B1"
            app:better_color_top="#F05E35B1"
            app:better_mode="square" />

    </LinearLayout>

</LinearLayout>