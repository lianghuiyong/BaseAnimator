<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/b_dp50"
        android:orientation="vertical">

        <com.better.anime.dynamic2d.tablayout.SmartTabLayout
            android:id="@+id/viewpagertab1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/b_dp45"
            app:stl_customTabTextLayoutId="@layout/custom_tab_margin"
            app:stl_distributeEvenly="true"
            app:stl_dividerColor="@android:color/transparent"
            app:stl_dividerThickness="0dp"
            app:stl_indicatorColor="#20ffffff"
            app:stl_indicatorCornerRadius="18dp"
            app:stl_indicatorGravity="center"
            app:stl_indicatorInterpolation="linear"
            app:stl_indicatorThickness="36dp"
            app:stl_indicatorWithoutPadding="true" />

        <com.better.anime.dynamic2d.tablayout.SmartTabLayout
            android:id="@+id/viewpagertab2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/b_dp45"
            app:stl_customTabTextLayoutId="@layout/custom_tab_margin"
            app:stl_defaultTabTextColor="@android:color/black"
            app:stl_defaultTabTextHorizontalPadding="24dp"
            app:stl_dividerColors="@array/custom_tab_colors"
            app:stl_indicatorColors="@array/custom_tab_colors"
            app:stl_indicatorInterpolation="linear"
            app:stl_indicatorThickness="3dp"
            app:stl_titleOffset="@dimen/b_dp24"
            app:stl_underlineThickness="1dp" />

        <com.better.anime.dynamic2d.tablayout.SmartTabLayout
            android:id="@+id/viewpagertab3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/b_dp45"
            app:stl_customTabTextLayoutId="@layout/custom_tab_margin"
            app:stl_defaultTabTextColor="@android:color/black"
            app:stl_defaultTabTextMinWidth="120dp"
            app:stl_indicatorAlwaysInCenter="true"
            app:stl_indicatorColor="#40C4FF"
            app:stl_indicatorCornerRadius="@dimen/b_dp1"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="@dimen/b_dp2"
            app:stl_underlineColor="@android:color/transparent" />

        <com.better.anime.dynamic2d.tablayout.SmartTabLayout
            android:id="@+id/viewpagertab4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/b_dp45"
            app:stl_customTabTextLayoutId="@layout/custom_tab_margin"
            app:stl_distributeEvenly="true"
            app:stl_indicatorColor="#40C4FF"
            app:stl_indicatorInterpolation="linear"
            app:stl_indicatorThickness="3dp"
            app:stl_underlineThickness="1dp" />

        <com.better.anime.dynamic2d.tablayout.SmartTabLayout
            android:id="@+id/viewpagertab5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/b_dp45"
            app:stl_customTabTextLayoutId="@layout/custom_tab_margin"
            app:stl_indicatorColor="#40C4FF"
            app:stl_indicatorInterpolation="linear"
            app:stl_indicatorThickness="3dp"
            app:stl_underlineThickness="1dp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</FrameLayout>

